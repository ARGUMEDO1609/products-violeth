<div class="w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div class="max-w-7xl w-full mx-auto px-10 mb-4">
      <%= link_to "Click_Volver a Productos", products_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-700 inline-block font-medium text-white" %>
      <%= link_to ">> #{ @product.name }", @product, class: "ml-2 rounded-lg py-3 px-5 bg-gray-700 inline-block font-medium text-white" %>
    </div>

    <div class="grid grid-cols-2">
      <div class="max-w-md w-full mx-auto rounded-lg">
        <%= image_tag@product.images.first, class: "w-full h-96 object-cover rounded-lg hover:brightness-75 transition-all duration-250"%>
        <div class="grid grid-cols-3 gap-4 mt-4">
          <% @product.images[1..].each do |image| %>
            <%= image_tag image, class: "w-full h-32 object-cover rounded-lg hover:brightness-75 transition-all duration-250" %>
          <% end %>
        </div>
      </div>
      <div class="max-w-xl">
        <h1 class="font-bring text-4xl "><%= @product.name %></h1>
        <div class="mt-4 text-lg font-bold">
          <%= simple_format @product.description %>
        </div>
             <div class="mt-4">
               <p class="font-bold text-lg">Tallas disponibles:</p>
               <ul class="list-disc list-inside">
                 <% @product.sizes.each do |size| %>
                   <li><%= size.name %></li>
                 <% end %>
               </ul> 
             </div>
        <br>
        <span class="bg-green-500 py-2 px-3 rounded-lg inline-block font-bold"><%= number_to_currency @product.price %></span>
      </div>
    </div>

    <% if current_admin %>
      <div class="w-full flex justify-center items-center mt-14 gap-4 ">  
         <%= link_to "Edit this product", edit_product_path(@product), class: " rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
           <%= link_to "Back to products", products_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
          <div class="inline-block ml-2">
        <%= button_to "Destroy this product", @product, method: :delete, class: " rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
     </div>
   </div>
  <% end %>
</div>

